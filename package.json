{
  "name": "back-denavaut-project",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "argon2": "^0.28.2",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "joi": "^17.4.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "mysql2": "^2.2.5",
    "nodemailer": "^6.6.3",
    "prettier": "^2.3.2"
  },
  "scripts": {
    "create-db-migration": "db-migrate create $NAME --sql-file",
    "migrUp": "db-migrate up",
    "rollback-last-db-migration": "db-migrate down",
    "start": "nodemon src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "npx eslint --fix *.js src tests *.js",
    "format": "prettier --write \"src/**/*.+(js|jsx|json|yml|yaml|css|md|vue)\"",
    "test": "NODE_ENV=test jest --testRunner='jest-circus/runner' --maxWorkers=1",
    "test:migrUp": "db-migrate up -e test"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "jest-circus": "^27.4.6",
    "nodemon": "^2.0.14",
    "supertest": "^6.1.6"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
